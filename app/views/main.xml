<Alloy>
	<Window>
		<ScrollableView id="scrollableView" dataCollection="feeds" dataTransform="transformFunction">
			<View>
				<Require src="actInd"/>
				<ScrollView >
					<ImageView class="image" image="{image}" onLoad="hideActInd" onClick="toggleDesc"/>
				</ScrollView>
				<View class="description">
					<WebView class="content" html="{content}"/>
					<!-- <WebView class="content" url="/webView/content.html"/> -->
					<!-- <Label class="content" text="{content}"/> -->
					<ImageView class="avatar" image="{avatar}"/>
					<Label class="author" text="{author}"/>
					<Label class="created_at" text="{created_at}"/>
				</View>
			</View>
		</ScrollableView>
	</Window>
</Alloy>