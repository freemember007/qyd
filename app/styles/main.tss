".content":{
	left: 10,
	right: 10,
	bottom: 50,
	height: Ti.UI.SIZE,
	backgroundColor: "transparent",
	enableZoomControls: false,
}

".avatar":{
	width: 30,
	height: 30,
	bottom: 5,
	left: 10,
	borderRadius:15,
	preventDefaultImage:true
}

".author":{
	height: 30,
	bottom: 5,
	left: 50,
	font: {fontSize: Alloy.CFG.smallFont},
	color: "#ccc",
}

".created_at":{
	height: 30,
	bottom: 5,
	right: 10,
	font: {fontSize: Alloy.CFG.smallFont},
	color: "#ccc",
}