"Window": {
	backgroundColor: "#000",
}

"#scrollableView":{
	width:"103%",
	showPagingControl:false,
}

"ScrollView":{
	width: Ti.Platform.displayCaps.platformWidth,
	contentWidth: Ti.Platform.displayCaps.platformWidth,
}

".image":{
	width: Ti.Platform.displayCaps.platformWidth,
	height: "auto",
	top:0,
	preventDefaultImage:true
}

".description":{
	bottom: 0,
	width: Ti.Platform.displayCaps.platformWidth,
	height: Ti.UI.SIZE,
	backgroundColor: "#90000000",
	zIndex: 2,
}

